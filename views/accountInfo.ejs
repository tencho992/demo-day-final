<%- include('partials/headerAcc') -%>
<section class="page__title-area page__title-height page__title-overlay d-flex align-items-center" data-background="assets/img/about/accSettings.webp">
   <div class="container">
      <div class="row">
         <div class="col-xxl-12">
            <div class="page__title-wrapper mt-110">
               <h5 class="page__title">Account Settings</h5>
               <br>
            </div>
         </div>
      </div>
   </div>
</section>

<div class="row"> 
   <section id="account">

<div class="container" id="userInfo" >

    <h2>User Name: <%= user.userName %><i onclick="showInputs()" class="fal fa-pencil editUser"></i></h2>
    <form action="/updateUser/<%= user._id.toString()%>/?_method=PUT" method="post">
    <input type="text" id="userInput" hidden place="update username" name="newUserName">
    
    <button type="submit" class="e-btn" hidden id="updateBtn1">Update</button>
   </form>
<br><br>
   <form action="/updateEmail/<%= user._id.toString()%>/?_method=PUT" method="post">
   <h2><strong>Email</strong>: <%= user.email %><i  onclick="showInputs2()" class="fal fa-pencil editEmail"></i></h2>
    <input hidden type="text" id='emailInput' place="update email" name="newEmail">
    <button type="submit" name="action" value="email" class="e-btn" hidden id="updateBtn2">Update</button>
   </form>
   <br><br>

</div>
     <form action="/post/deleteUser/<%= user._id.toString() %>/?_method=DELETE" method="POST">
       <h4 id="cssDelete"> <button type="submit" class="e-btn">Delete Account: We're Sorry to see you go!</button></h4>
     </form>

</section>

</div>

<%- include('partials/footer') -%>
